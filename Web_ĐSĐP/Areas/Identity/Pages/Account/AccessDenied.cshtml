@page
@model E_Sport.Areas.Identity.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
    string url = HttpContext.Request.Query["ReturnUrl"];
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="text-center p-5 shadow-lg rounded" style="background: linear-gradient(135deg, #ffe6e6, #fff); max-width: 600px;">
        <div style="font-size: 60px; color: #dc3545;">🚫</div>
        <h2 class="mt-3" style="color: #dc3545;">Không có quyền truy cập!</h2>
        <p class="mt-2 mb-4 text-muted">
            Có vẻ như bạn không có quyền để xem trang này.<br />
            <span class="badge bg-secondary">Trang bị chặn:</span> <code class="text-dark">@url</code>
        </p>
        <a href="/" class="btn btn-outline-danger px-4 py-2">
            ⬅️ Quay về Trang chủ
        </a>
    </div>
</div>
