@model E_Sport.Models.ConfirmAccountViewModel

@{
    ViewData["Title"] = "Đặt mật khẩu nhân viên";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ConfirmAccount" method="post">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <label asp-for="Password" class="control-label">Mật khẩu</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Xác nhận</button>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary mt-2">Quay lại</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
